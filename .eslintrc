{
    "extends": "eslint:recommended",

    "env": {
        "browser": true,
        "commonjs": true
    },

    "globals": {

    },

    "rules": {
        // possible errors
        "no-console": 0,

        // best practicies
        "curly": 2,
        "eqeqeq": 2,
        "no-eval": 2,
        "no-extend-native": [1, {
            "exceptions": ["String"]
        }],
        "no-floating-decimal": 2,
        "no-implied-eval": 2,
        "no-invalid-this": 2,
        "no-lone-blocks": 1,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-new-wrappers": 1,
        "no-new": 2,
        "no-octal": 1,
        "no-proto": 2,
        "no-script-url": 2,
        "no-self-compare": 1,
        "no-sequences": 2,
        "no-throw-literal": 2,
        "no-unused-expressions": 2,
        "no-useless-call": 1,
        "no-void": 2,
        "no-with": 2,
        "radix": 1,
        "wrap-iife": [2, "inside"],
        "yoda": 2,

        // variables
        "no-shadow-restricted-names": 2,
        "no-undef": 2,
        "no-undefined": 2,

        // stylistic issues
        "brace-style": [2, "stroustrup", {
            "allowSingleLine": false
        }],
        "comma-style": [2, "last"],
        "indent": 2,
        "key-spacing": [2, {
            "beforeColon": false,
            "afterColon": true
        }],
        "no-spaced-func": 2,
        "one-var": [2, "never"],
        "quotes": [2, "single"],
        "semi-spacing": 2,
        "space-after-keywords": [2, "never"],
        "space-before-function-paren": [2, "never"],
        "space-before-keywords": [2, "always"]
    }
}
